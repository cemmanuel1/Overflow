<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>

  <div class="pure-group"> 
    <div class='input_field'><br/>
      <%= f.email_field :email, placeholder: "Email", :class => "pure-u-1-3", :autofocus => true %>
    </div>

      <div class='input_field'><br />
        <%= f.password_field :password, :class => "pure-u-1-3", placeholder: "Password" %>
      </div>

        <div class='input_field'><br />
          <%= f.password_field :password_confirmation, placeholder: "Confirm Password", :class => "pure-u-1-3" %>
        </div>
          <br>
          <div class='input_field'>
            <%= f.submit "Sign up", :class => "pure-button pure-button-primary" %>
          </div>

        </div>
        <% end %>
