<h2>Sign in</h2>

<div class="trying">
<%= form_for(resource, :as => resource_name, :class => "pure-form",:url => session_path(resource_name)) do |f| %>

<div  class="pure-group"> 
  <div>
    <%= f.email_field :email, :class => "pure-u-1-3", :placeholder =>"Email", :autofocus => true %></div>
    <br>
    <div>
      <%= f.password_field :password, :class => "pure-u-1-3", :placeholder =>"Password"%></div>
      <br>

      <% if devise_mapping.rememberable? -%>
      
      <div>   <%= f.submit "Sign in", :class => "pure-button pure-button-primary" %>
        &nbsp; &nbsp; &nbsp; &nbsp;
        <%= f.check_box :remember_me, :checked => "checked" %> <%= f.label :remember_me %>
        <% end -%>

      </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
    
