<h2>New Question Form</h2>
 <div class="pure-group"> 
<%= form_for @question, :html => {:multipart => true} do |f| %>
  <%= f.text_field :title , id: "title", placeholder: "Title" %><br/>
  <br>
  <%= f.text_area :content, id: "content", placeholder: "Content" , :rows => 10%> <br/>
  <br>
  <%= f.file_field :image, id: 'image' %> <br><br>
  <%= f.text_field :tags, placeholder: "Enter Tags", value: ''%>
  <br>
  <%= f.hidden_field :retained_image %>

  <%= f.hidden_field :user_id, value: current_user.id %>
  <br>
  <%= f.submit "Submit Question", :class => "pure-button pure-button-primary" %>
<% end %>
</div>



